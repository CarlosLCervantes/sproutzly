<div id="item-growth" class="work-item">
	<div class="status_item">
		<%= image_tag "home/growthCircle.png" %>
		<% box_class = (@growth_work_item) ? "status-box" : "status-box fresh" %>
		<div class="<%= box_class %>">
			<h2>Get a&nbsp;<span class="highlight">Custom</span>&nbsp; Growth Strategy</h2>
			<% if(@growth_work_item) %>
				<% if(@growth_work_item.done?) %>
					<h3>Work Complete!</h3>
				<% end %>
			<% end %>
		</div>
		<% unless(@growth_work_item) %>
			<%= button_tag "START", :class => "btn-start-wi btn btn-primary btn-large" %>
		<% end %>
	</div>
	<% unless(@growth_work_item) %>
		<div class="action-item">

			<div class="action_text">
				<p>Tell us a little bit about your goal:</p>
			</div>
			<%#= select_tag :market, options_for_select(@markets.collect{ |m| [m.name, m.id] }) %>
			<%= text_area_tag :goal_text, "", :class => "txt-growth" %>
			<%= button_tag "DONE", :class => "btn-email btn-select-growth btn btn-primary btn-large" %>
		</div>
	<% end %>
</div>