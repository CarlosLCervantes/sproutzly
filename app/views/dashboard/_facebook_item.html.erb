<div id="item-facebook" class="work-item">
	<div class="status_item">
		<%= image_tag "home/facebookCircle.png" %>
		<% box_class = (@facebook_work_item) ? "status-box" : "status-box fresh" %>
		<div class="<%= box_class %>">
			<h2>Get&nbsp;&nbsp;<span class="highlight"><%= number_with_delimiter(Settings.like_count, :delimiter => ',') %></span>&nbsp;&nbsp;Facebook fans</h2>
			<% if(@facebook_work_item) %>
				<% if(@facebook_work_item.done?) %>
					<h3>Work Complete!</h3>
				<% elsif(@facebook_work_item) %>
					<h3>Work in Progress...</h3>
					<p>Work can take up to 5 days to completely process</p>
				<% end %>
			<% end %>
		</div>
		<% unless(@facebook_work_item) %>
			<%= button_tag "START", :class => "btn-start-wi btn btn-primary btn-large" %>
		<% end %>
	</div>
	<% unless(@facebook_work_item) %>
		<div class="action-item">
			<div class="action_text">
				<p>Give us your Facebook and we can get started. You can expect to see fans trickling in over the next week.</p>
			</div>
			<%= text_field_tag :facebook_url, @facebook_work_item.try(:value), :placeholder => "http://www.facebook.com/sproutzly", :class=> "txt-email" %>
			<%= button_tag "Submit", :class => "btn-email btn-facebook-add btn btn-primary btn-large" %>
				<br class="clear">
		</div>
	<% end %>
</div>